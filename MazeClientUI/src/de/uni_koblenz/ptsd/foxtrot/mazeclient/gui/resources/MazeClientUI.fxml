<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.uni_koblenz.ptsd.foxtrot.mazeclient.gui.MazeClientAppController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            <children>
            	<Label fx:id="connectionLabel" text="Not connected" />
            </children>
        </HBox>
    </top>

    <right>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            <children>
                <Label text="Scoreboard" />
                <TableView fx:id="scoreTable" prefWidth="260">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="60" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="120" text="Name" />
                        <TableColumn fx:id="scoreColumn" prefWidth="80" text="Score" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </right>

    <left>
        <VBox alignment="CENTER_LEFT" prefHeight="447.0" prefWidth="171.0" spacing="10" BorderPane.alignment="CENTER">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            <children>
                <HBox alignment="CENTER" prefHeight="37.0" prefWidth="91.0">
                    <children>
                        <Button fx:id="stepButton" alignment="CENTER"
                                onAction="#step" prefHeight="30.0" prefWidth="65.0" text="Step" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="39.0" prefWidth="151.0" spacing="20.0">
                    <children>
                        <Button fx:id="turnLeftButton" onAction="#turnLeft" prefHeight="30.0" prefWidth="65.0" text="⟲ Left" />
                        <Button fx:id="turnRightButton" onAction="#turnRight" prefHeight="30.0" prefWidth="65.0" text="Right ⟳" />
                    </children>
                </HBox>
                <Separator />
                <VBox spacing="5.0">
                    <children>
                        <Label text="Robot Strategy" />
                        <ComboBox fx:id="strategyChoice" prefWidth="150.0" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>

    <bottom>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <padding><Insets bottom="10" top="10" /></padding>
            <children>
                <Label text="Zoom:"/>
                <Slider fx:id="zoomSlider" prefWidth="200" />
                <Button text="Disconnect" onAction="#disconnect" />
            </children>
        </HBox>
    </bottom>

    <center>
        <ScrollPane fx:id="mazeScroll"
                prefWidth="800" prefHeight="600"
                fitToWidth="false" fitToHeight="false"
                BorderPane.alignment="CENTER">
        <content>
            <StackPane fx:id="mazeStack" />
        </content>
    </ScrollPane>
    </center>

</BorderPane>
